	<div class="fields">
		<ul class="form-row">
			<li>
				<label class="lbl">Normal</label>
				<rgen-box type="alone" config="{color:1, f_size:1, margin:0, shadow:0, padding:0, border:0, bg:0}" buttonlabel="Edit" data-ng-model="themeData[manage_tab].h_effect1.normal.common.title"></rgen-box>
			</li>
			<li>
				<label class="lbl">Hover</label>
				<rgen-box type="alone" config="{fonts:0, color:1, f_size:1, margin:0, shadow:0, padding:0, border:0, bg:0}" buttonlabel="Edit" data-ng-model="themeData[manage_tab].h_effect1.hover.common.title"></rgen-box>
