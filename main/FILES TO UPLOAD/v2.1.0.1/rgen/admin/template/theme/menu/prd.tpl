<section class="rgen-panel">
	<h2 class="hd">Products</h2>
	<div class="panel-container">
		<div class="rgen-form-wrp form-full form-medium">
		
			<h3 class="rgen-hd-1">Product box style 1</h3>
			<rgen-box label="Block settings" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.prdblock1.block"></rgen-box>
			<div class="field-box">
				<label>Name, price & button</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Name normal</label>
							<rgen-colorpicker type="alone" data-ng-model="themeData.megamenu.prdblock1.linktext.normal"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Name hover</label>
							<rgen-colorpicker type="alone" data-ng-model="themeData.megamenu.prdblock1.linktext.hover"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Price</label>
							<rgen-colorpicker type="alone" label="Price text" data-ng-model="themeData.megamenu.prdblock1.price"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Button</label>
							<rgen-button type="alone" label="Button settings" buttonlabel="Edit" data-ng-model="themeData.megamenu.prdblock1.button"></rgen-button>
						</li>
					</ul>
				</div>
			</div>

			<h3 class="rgen-hd-1">Product box style 2</h3>
			<rgen-box label="Block settings" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.prdblock2.block"></rgen-box>
			<div class="field-box">
				<label>Name, price & button</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Name normal</label>
							<rgen-colorpicker type="alone" data-ng-model="themeData.megamenu.prdblock2.linktext.normal"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Name hover</label>
							<rgen-colorpicker type="alone" data-ng-model="themeData.megamenu.prdblock2.linktext.hover"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Price</label>
							<rgen-colorpicker type="alone" label="Price text" data-ng-model="themeData.megamenu.prdblock2.price"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Button</label>
							<rgen-button type="alone" label="Button settings" buttonlabel="Edit" data-ng-model="themeData.megamenu.prdblock2.button"></rgen-button>
						</li>
					</ul>
				</div>
			</div>

		</div>
	</div>
</section>