<section class="rgen-panel">
	<h2 class="hd">Category</h2>
	<div class="panel-container">
		<div class="rgen-form-wrp form-full form-medium">

			<h3 class="rgen-hd-1">Category style 1</h3>
			<rgen-box label="Block settings" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock1.block"></rgen-box>
			<div class="field-box">
				<label>Title and Sub links</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Title</label>
							<rgen-button type="alone" config="{align:1, f_size:1}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock1.heading"></rgen-button>
						</li>
						<li>
							<label class="lbl">Sub links</label>
							<rgen-button type="alone" config="{align:1, f_size:1}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock1.links"></rgen-button>
						</li>
					</ul>
				</div>
			</div>
			
			<h3 class="rgen-hd-1">Category style 2</h3>
			<div class="field-box">
				<label>Outer block and image</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Block</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock2.block"></rgen-box>
						</li>
						<li>
							<label class="lbl">Image</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock2.image"></rgen-box>
						</li>
					</ul>
				</div>
			</div>

			<div class="field-box">
				<label>Title and Sub links</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Title</label>
							<rgen-button type="alone" config="{align:1, f_size:1}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock2.heading"></rgen-button>
						</li>
						<li>
							<label class="lbl">Sub links</label>
							<rgen-button type="alone" config="{align:1, f_size:1}" buttonlabel="Edit" data-ng-model="themeData.megamenu.catblock2.links"></rgen-button>
						</li>
					</ul>
				</div>
			</div>
			
		</div>
	</div>
</section>