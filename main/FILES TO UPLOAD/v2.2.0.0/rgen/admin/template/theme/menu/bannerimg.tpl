<section class="rgen-panel">
	<h2 class="hd">Image</h2>
	<div class="panel-container">
		<div class="rgen-form-wrp form-full form-medium">
			
			<!-- Menu item : Image block 1
			======================== -->
			<h3 class="rgen-hd-1">Image block style 1</h3>
			<div class="field-box">
				<label>Block</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Normal</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock1.block.normal"></rgen-box>
						</li>
						<li>
							<label class="lbl">Hover</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock1.block.hover"></rgen-box>
						</li>
					</ul>
				</div>
			</div>
			<div class="field-box">
				<label>Text</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Normal</label>
							<rgen-box type="alone" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock1.linktext.normal"></rgen-box>
						</li>
						<li>
							<label class="lbl">Hover</label>
							<rgen-box type="alone" config="{fonts: 0, color: 1}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock1.linktext.hover"></rgen-box>
						</li>
					</ul>
				</div>
			</div>
			
			<!-- Menu item : Image block 2
			======================== -->
			<h3 class="rgen-hd-1">Image block style 2</h3>
			<div class="field-box">
				<label>Block & hover settings</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Background</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock2.block"></rgen-box>
						</li>
						<li>
							<label class="lbl">Hover background</label>
							<rgen-colorpicker type="alone" data-ng-model="themeData.megamenu.imageblock2.hover.background"></rgen-colorpicker>
						</li>
						<li>
							<label class="lbl">Hover text color</label>
							<rgen-colorpicker type="alone" data-ng-model="themeData.megamenu.imageblock2.hover.textcolor"></rgen-colorpicker>
						</li>
					</ul>
				</div>
			</div>
			
			<!-- Menu item : Image block 3
			======================== -->
			<h3 class="rgen-hd-1">Image block style 3</h3>
			<div class="field-box">
				<label>Block</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Normal</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock3.block.normal"></rgen-box>
						</li>
						<li>
							<label class="lbl">Hover</label>
							<rgen-box type="alone" config="{fonts: 0}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock3.block.hover"></rgen-box>
						</li>
					</ul>
				</div>
			</div>
			<div class="field-box">
				<label>Text</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Normal</label>
							<rgen-box type="alone" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock3.linktext.normal"></rgen-box>
						</li>
						<li>
							<label class="lbl">Hover</label>
							<rgen-box type="alone" config="{fonts: 0, color: 1}" buttonlabel="Edit" data-ng-model="themeData.megamenu.imageblock3.linktext.hover"></rgen-box>
						</li>
					</ul>
				</div>
			</div>
			
			<!-- Menu item : Image block 4
			======================== -->
			<h3 class="rgen-hd-1">Image block style 4</h3>
			<rgen-button label="Settings" buttonlabel="Edit" config="{fonts:0}" data-ng-model="themeData.megamenu.imageblock4.block"></rgen-button>

		</div>
	</div>
</section>