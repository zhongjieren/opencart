<rgen-reset resetfn="reset('global_prdgirdpages')" config="0" label="Reset data"></rgen-reset>

<section class="rgen-panel">
	<h2 class="hd">Category page</h2>
	<div class="panel-container">
		<div class="rgen-form-wrp form-full">
			<rgen-radio label="Product box style" helpimg="imgPath+'prdblocks.jpg'" radiodata="prdblock_styles" buttonlabel="Edit" size="mini" data-ng-model="themeData.category.prd_style"></rgen-radio>
			<div class="field-box">
				<label class="tip">Product grid settings</label>
				<div class="fields">
					<ul class="form-row">
						<li>
							<label class="lbl">Grid view</label>
							<rgen-grids type="alone" buttonlabel="Edit" size="mini" data-ng-model="themeData.category.gridview"></rgen-grids>
						</li>
						<li>
							<label class="lbl">List view</label>
							<rgen-grids type="alone" buttonlabel="Edit" size="mini" data-ng-model="themeData.category.listview"></rgen-grids>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</section>

